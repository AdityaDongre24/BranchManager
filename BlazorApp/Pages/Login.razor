@page "/"
@inherits LoginBase

<h2>Login</h2>
<hr />

<EditForm Model="@User" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="userName" class="col-form-label col-sm-2">User Name</label>
        <div id="userName" class="col-sm-10">
            <InputText @bind-Value="User.UserName"></InputText>
            <ValidationMessage For="@(()=>User.UserName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-form-label col-sm-2"> Password</label>
        <div id="password" class="col-sm-10">
            <InputText @bind-Value="User.Password"></InputText>
            <ValidationMessage For="@(()=>User.Password)"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</EditForm>

@if (InvalidUser)
{
    <p class="alert-danger col-sm-4">User Name or Password incorrect</p>
}

